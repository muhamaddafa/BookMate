<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/drawable_image"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="16dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="16dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/arrow_back"
                android:contentDescription="Back Icon"
                app:tint="@android:color/holo_blue_dark" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageButton
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/rounded_background"
                android:src="@drawable/uil_edit"
                android:scaleType="centerInside"
                android:contentDescription="Edit Icon" />
        </LinearLayout>

        <!-- Book Cover and Info -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Naruto 05"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="32sp"
            android:textStyle="bold"
            android:gravity="start"
            android:layout_gravity="start" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="2dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="140dp"
                android:layout_height="180dp"
                android:background="@drawable/border_4px"
                android:contentDescription="Book Cover"
                android:scaleType="centerCrop" />

            <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:text="Pandu Uzumaki"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/rounded_background"
                android:elevation="4dp"
                android:padding="6dp" />

            <TextView
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:text="PPP Publisher"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:padding="6dp"
                android:background="@drawable/rounded_background"
                android:layout_marginTop="8dp" />

            <TextView
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:text="150"
                android:textStyle="bold"
                android:background="@drawable/rounded_background"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:padding="6dp"
                android:layout_marginTop="8dp" />

            <TextView
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:text="Paper Book"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:padding="6dp"
                android:background="@drawable/rounded_background"
                android:layout_marginTop="8dp" />

            <Button
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:text="Add new note"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:background="@drawable/rounded_background"
                android:drawableLeft="@drawable/add_newnote"
                android:drawablePadding="4dp"
                android:gravity="start|center_vertical"
                android:paddingStart="2dp"
                android:layout_marginTop="8dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Description -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Description"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingTop="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@drawable/border_2px"
            android:hint="Book Description in Here..."
            android:gravity="top|start"
            android:padding="8dp" />

        <!-- Note Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NOTE"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingTop="14dp"
            android:paddingBottom="8dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10/10/1001"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:layout_gravity="top|start"
                    android:paddingEnd="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:ellipsize="end"
                        android:maxLines="5"
                        android:text="Book Description in Here. We Good We Good We Good We Good..."
                        android:textColor="@android:color/black"
                        android:background="@drawable/google_button_border"
                        android:padding="8dp"
                        android:textSize="10sp" />
                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|start"
                    android:paddingEnd="8dp"
                    android:text="10/10/1001"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:background="@drawable/google_button_border"
                        android:ellipsize="end"
                        android:maxLines="5"
                        android:padding="8dp"
                        android:text="Book Description in Here. We Good We Good We Good We Good..."
                        android:textColor="@android:color/black"
                        android:textSize="10sp" />
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
