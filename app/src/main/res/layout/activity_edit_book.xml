<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:fitsSystemWindows="true"
    android:isScrollContainer="true"
    tools:context=".EditBookActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_margin="16dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical|start"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/arrow_back"
                android:contentDescription="Back Icon"
                app:tint="@android:color/holo_blue_dark" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Edit Book"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="32sp"
                android:textStyle="bold"
                android:gravity="center_horizontal" />
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="8dp"
                />
        </LinearLayout>

        <!-- Book Cover -->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="116dp"
                android:layout_height="155dp"
                android:background="@drawable/border_4px"
                android:contentDescription="Book Cover"
                android:scaleType="centerCrop" />

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/bxs_camera"
                android:background="@drawable/rounded_edit_text"
                android:contentDescription="Change Cover"
                android:layout_marginTop="-20dp"
                android:layout_gravity="end|bottom" />
        </FrameLayout>
<!--        <ImageView-->
<!--            android:layout_width="116dp"-->
<!--            android:layout_height="155dp"-->
<!--            android:layout_marginTop="8dp"-->
<!--            android:background="@drawable/border_4px"-->
<!--            android:contentDescription="Book Cover"-->
<!--            android:scaleType="centerCrop" />-->

<!--        <ImageButton-->
<!--            android:layout_width="40dp"-->
<!--            android:layout_height="40dp"-->
<!--            android:src="@drawable/bxs_camera"-->
<!--            android:background="@drawable/rounded_edit_text"-->
<!--            android:contentDescription="Change Cover"-->
<!--            android:layout_marginTop="-40dp"-->
<!--            android:layout_gravity="" />-->

        <!-- Input Fields using TextInputLayout and TextInputEditText -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textColor="@color/Black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="@color/Lochmara_400">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="13dp"
                android:textSize="20sp"
                android:background="@drawable/border_2px"
                android:text="Naruto 05"
                android:inputType="textEmailAddress" />
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Author"
            android:textColor="@color/Black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="@color/Lochmara_400">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="13dp"
                android:textSize="20sp"
                android:background="@drawable/border_2px"
                android:text="Pandu Uzumaki"
                android:inputType="textEmailAddress" />
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Publisher"
            android:textColor="@color/Black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="@color/Lochmara_400">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="13dp"
                android:textSize="20sp"
                android:background="@drawable/border_2px"
                android:text="PPP Podcast"
                android:inputType="textEmailAddress" />
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total Pages"
            android:textColor="@color/Black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="@color/Lochmara_400">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="13dp"
                android:textSize="20sp"
                android:background="@drawable/border_2px"
                android:text="150"
                android:inputType="textEmailAddress" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Book Type Buttons -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What type of book do you read?"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/cardview_dark_background"
            android:layout_marginTop="16dp"
            android:gravity="start" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left"
            android:layout_marginTop="8dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paper Book"
                android:backgroundTint="@android:color/holo_blue_light"
                android:background="@drawable/rounded_button"
                android:textColor="@android:color/white" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E-book"
                android:layout_marginStart="8dp"
                android:backgroundTint="@android:color/holo_blue_light"
                android:background="@drawable/rounded_button"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <!-- Description -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/cardview_dark_background"
            android:layout_marginTop="16dp"
            android:gravity="start" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundMode="outline"
            android:layout_marginTop="8dp"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:text="Write a description..."
                android:textAlignment="textStart"
                android:background="@drawable/border_2px"
                android:gravity="top|start"
                android:padding="8dp"
                android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Save Button -->
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Book"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:background="@drawable/rounded_button"
            android:textColor="@android:color/white"
            android:textStyle="bold" />
    </LinearLayout>
</ScrollView>
