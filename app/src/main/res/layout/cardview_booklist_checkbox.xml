<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/border_4px"
    android:padding="8dp"
    android:layout_margin="8dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <!-- Book Cover Image -->
        <ImageView
            android:id="@+id/bookCoverImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/solar_gallery_broken"
            android:contentDescription="Book Image"
            android:scaleType="centerCrop" />

        <!-- CheckBox in Top Right Corner -->
        <CheckBox
            android:id="@+id/bookCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|top"
            android:padding="4dp" />
    </FrameLayout>

    <!-- Book Title -->
    <TextView
        android:id="@+id/bookTitleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="4dp"
        android:text="Book Title" />

    <!-- Book Author -->
    <TextView
        android:id="@+id/bookAuthorTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginTop="2dp"
        android:text="Author Name" />

    <!-- Page Count -->
    <TextView
        android:id="@+id/pageCountTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_marginTop="2dp"
        android:text="Pages: 200" />

</LinearLayout>
