<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:elevation="40dp"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:navigationIcon="@drawable/arrow_back" />

        <!-- Judul di toolbar -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="Add Shelves"
            android:textColor="@color/Lochmara_500"
            android:textSize="30sp"
            android:textStyle="bold"
            android:gravity="center"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"/>
    </LinearLayout>

    <!-- Judul 'Add Title' -->
    <EditText
        android:id="@+id/add_title_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10sp"
        android:text="Add Title"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/Black" />

    <!-- Gambar/Icon di bawah 'Add Title' -->
    <ImageView
        android:id="@+id/add_title_image"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:background="@drawable/border_2px"
        android:padding="20dp"
        android:scaleType="centerInside"
        android:src="@drawable/image_placeholder"
        android:layout_marginBottom="60dp"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp">

        <LinearLayout
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Judul 'Add Book to Shelves' -->
            <TextView
                android:id="@+id/add_book_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Book to Shelves"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/Black"
                android:layout_marginBottom="20sp"/>

            <!-- Tombol dengan ikon '+' -->
            <ImageView
                android:id="@+id/add_book_button"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/border_2px"
                android:padding="20dp"
                android:scaleType="centerInside"
                android:src="@drawable/addbook_icon"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
