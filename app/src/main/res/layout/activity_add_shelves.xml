<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:elevation="40dp"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:navigationIcon="@drawable/arrow_back" />

        <!-- Judul di toolbar -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="Add Shelves"
            android:textColor="@color/Lochmara_500"
            android:textSize="30sp"
            android:textStyle="bold"
            android:gravity="center"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"/>
    </LinearLayout>

    <!-- Judul 'Add Title' -->
    <EditText
        android:id="@+id/add_title_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10sp"
        android:hint="Add Title"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/Black"
        android:gravity="center"/>

    <!-- Gambar/Icon di bawah 'Add Title' -->
    <ImageView
        android:id="@+id/add_shelves_image"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:background="@drawable/border_2px"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:src="@drawable/solar_gallery_broken"
        android:layout_marginBottom="30dp"/>


    <!-- Description Shelves -->
    <EditText
        android:id="@+id/add_description_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10sp"
        android:hint="Description"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/Black"
        android:gravity="center"/>


    <Button
        android:id="@+id/add_shelves"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="120dp"
        android:minHeight="40dp"
        android:background="@drawable/gradient_color"
        android:text="Add Shelves"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:padding="15dp"
        android:textSize="15sp"
        android:layout_marginTop="20dp"
        />

    <!-- ProgressBar -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:layout_marginTop="20dp" />

</LinearLayout>